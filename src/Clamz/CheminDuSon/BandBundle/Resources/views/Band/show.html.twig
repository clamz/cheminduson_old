{% extends "CdsBandBundle::layout.html.twig" %}
{% block body %}
	<h1>Band</h1>
	
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Name</th>
	            <td>{{ entity.name }}</td>
	        </tr>
	        <tr>
	            <th>Nationality</th>
	            <td>{{ entity.nationality }}</td>
	        </tr>
	        <tr>
	            <th>Image</th>
	            <td>{{ entity.image }}</td>
	        </tr>
	        <tr>
	            <th>Presentation</th>
	            <td>{{ entity.presentation }}</td>
	        </tr>
	    </tbody>
	</table>
	
	<ul class="record_actions">
	    <li>
	        <a href="{{ path('band') }}">
	            Back to the list
	        </a>
	    </li>
	    <li>
	        <a href="{{ path('band_edit', { 'id': entity.id }) }}">
	            Edit
	        </a>
	    </li>
	    <li>
	        <form action="{{ path('band_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">Delete</button>
	        </form>
	    </li>
	</ul>
{% endblock %}
