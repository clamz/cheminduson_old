{% extends "CdsBandBundle::layout.html.twig" %}
{% block body %}
<h1>Band list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Nationality</th>
            <th>Image</th>
            <th>Presentation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('band_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.nationality }}</td>
            <td>{{ entity.image }}</td>
            <td>{{ entity.presentation }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('band_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('band_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('band_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}